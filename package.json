  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@hono/node-server": "^1.19.7",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@preact/signals": "^1.2.0",
    "arctic": "^3.7.0",
    "hono": "^4.11.1",
    "preact": "^10.19.0",
    "zod": "^4.2.1"
  }
}
