{
  "name": "journal",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bash scripts/dev.sh",
    "dev:server": "bun --watch src/index.ts",
    "dev:client": "bun build src/client/main.tsx --outdir=dist/client/assets --watch",
